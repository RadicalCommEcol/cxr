citHeader("To cite rcites use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{cxr}: An R package to ...",
         author = c(person("David", "Garcia-Callejas"),
                    person("Ignasi", "Bartomeus"),
                    person("Oscar", "Godoy")
                    ),
         year = year,
         note = note,
         url = "")
